{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@camino/auth": ["libs/apps/auth/src/index.ts"],
      "@camino/data": ["libs/data/src/index.ts"],
      "@camino/logic": ["libs/logic/src/index.ts"],
      "@camino/store": ["libs/store/src/index.ts"],
      "@camino/styles": ["libs/styles/src/index.ts"],
      "@camino/test": ["libs/test/src/index.ts"],
      "@camino/ui": ["libs/ui/src/index.ts"],
      "@camino/wallet": ["libs/apps/wallet/src/index.ts"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules", "tmp"]
}
